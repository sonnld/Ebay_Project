@page
@model Ebay_Project_PRN.Pages.ManageCategoriesModel
@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Manage Categories</h2>

<!-- Form to Search Categories -->
<form method="get" style="display: flex; justify-content: flex-end; align-items: center;">
    <div style="margin-bottom: 15px; display: flex; align-items: center;">
        <input type="text" name="searchQuery" placeholder="Enter category name" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; margin-right: 10px;" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>


<!-- Form to Add New Category -->
<form method="post" style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <h3 style="color: #4a90e2; font-weight: bold;">Add New Category</h3>
    <div style="margin-bottom: 15px;">
        <label asp-for="Category.CategoryName" style="font-weight: bold;">Category Name</label>
        <input asp-for="Category.CategoryName" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
        <span asp-validation-for="Category.CategoryName" style="color: red;"></span>
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Category.Description" style="font-weight: bold;">Description</label>
        <input asp-for="Category.Description" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
        <span asp-validation-for="Category.Description" style="color: red;"></span>
    </div>
    <button type="submit" formaction="@Url.Page("ManageCategories", "Create")" style="background-color: #4a90e2; color: white; padding: 10px 20px; border: none; border-radius: 4px;">Add Category</button>
</form>


<!-- Category List -->
<h3>Category List</h3>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Categories != null && Model.Categories.Any())
        {
            foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td>@(category.IsActive ?? false ? "Yes" : "No")</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="categoryId" value="@category.CategoryId" />
                            <!-- ToggleActive Button with Conditional Background Color -->
                            @{
                                var backgroundColor = category.IsActive ?? false ? "lightpink" : "lightgreen";
                            }

                            <button type="submit" class="btn"
                                    style="background-color: @backgroundColor; color: black; width: 100px; height: 40px;"
                                    formaction="@Url.Page("ManageCategories", "ToggleActive")">
                                @(category.IsActive ?? false ? "Hidden" : "Visible")
                            </button>


                            <!-- Edit Button -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal"
                                    data-id="@category.CategoryId" data-name="@category.CategoryName" data-description="@category.Description">
                                Edit
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No categories available.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap Modal for Editing Categories -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #f2f2f2;">
                <!-- Thêm màu nền vào header -->
                <h5 class="modal-title" id="editModalLabel" style="font-weight: bold; color: #4a90e2;">Edit Category</h5> <!-- Đậm và chỉnh màu -->
                <button type="button" class="close" data-dismiss="modal" style="background-color: lightcoral" aria-label="Close">
                    <span aria-hidden="true" >&times;</span>
                </button>
            </div>
            <div class="modal-body" style="font-family: 'Arial', sans-serif; font-size: 14px;">
                <!-- Chỉnh font chữ và kích thước -->
                <form id="editCategoryForm" method="post">
                    <input type="hidden" id="editCategoryId" name="CategoryId" />
                    <div class="form-group">
                        <label for="editCategoryName" style="font-weight: bold;">Category Name</label> <!-- Đậm label -->
                        <input type="text" class="form-control" id="editCategoryName" name="CategoryName" style="border: 1px solid #ccc;" /> <!-- Chỉnh border input -->
                    </div>
                    <div class="form-group">
                        <label for="editCategoryDescription" style="font-weight: bold;">Description</label> <!-- Đậm label -->
                        <input type="text" class="form-control" id="editCategoryDescription" name="Description" style="border: 1px solid #ccc;" /> <!-- Chỉnh border input -->
                    </div>
                </form>
            </div>
            <div class="modal-footer" style="background-color: #f9f9f9;">
                <!-- Thêm màu nền vào footer -->
                <button type="button" class="btn btn-secondary" data-dismiss="modal" style="font-weight: bold; background-color: lightcoral">Close</button> <!-- Đậm nút Close -->
                <button type="submit" form="editCategoryForm" class="btn btn-primary" formaction="@Url.Page("ManageCategories", "Update")" style="font-weight: bold;">Save changes</button> <!-- Đậm nút Save -->
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap JS and jQuery (add in the layout if not already included) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Script to populate modal with category data -->
<script>
    $('#editModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Button that triggered the modal
        var categoryId = button.data('id'); // Extract info from data-* attributes
        var categoryName = button.data('name');
        var categoryDescription = button.data('description');

        // Update the modal's content
        var modal = $(this);
        modal.find('#editCategoryId').val(categoryId);
        modal.find('#editCategoryName').val(categoryName);
        modal.find('#editCategoryDescription').val(categoryDescription);
    });
</script>
